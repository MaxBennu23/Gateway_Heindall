<div>@*HELP : Tabelas : Esta tabela se relaciona com a Controller Grupos/Details*@
    <h4>Integradores que pertencem a este Grupo</h4>

    <table>
        <thead>
            <tr>
                <th>Nome</th>
                <th>Endpoint</th>
                <th>Public Key</th>
                <th>Private Key</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var integrador in Model.Integradores)
            {
                <tr>
                    <td>@integrador.IntegradorNome</td>
                    <td>@integrador.IntegradorEndpoint</td>
                    <td>@integrador.IntegradorPublicKey</td>
                    <td>@integrador.IntegradorPrivateKey</td>
                </tr>
            }
        </tbody>
        </table>

</div>